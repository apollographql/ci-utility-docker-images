{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Ensure that we don't get automated bumps to new major versions of base images, these will always be
    // done manually
    {
      "matchFileNames": [
        "Dockerfile"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ]
}
